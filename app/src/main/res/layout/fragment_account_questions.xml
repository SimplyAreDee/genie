<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.AccountQuestionsFragment"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/fragment_account_questions_notification_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_zone"
        android:textAlignment="center"
        android:layout_margin="@dimen/default_large_margin"
        android:textColor="@color/colorText"
        android:visibility="invisible"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_account_questions_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>