<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/activity_chat_directory_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/filter_by_pseudo"
        android:layout_marginBottom="20dp"
        />
    <Spinner
        android:id="@+id/activity_chat_directory_spinner"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:minHeight="50dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/activity_chat_directory_imageButton"
        android:background="@drawable/button_circular"
        android:src="@drawable/outline_edit_white_18dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"/>
</LinearLayout>