<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:id="@+id/fragment_layout_list_item">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="80">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="100dp">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_layout_list_item_questionVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
            <ImageView
                android:id="@+id/fragment_layout_list_item_certifiedAnswer_imageview"
                android:src="@drawable/outline_expand_less_white_18dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_layout_list_item_answerVote_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="@android:color/white"/>

            <ImageView
                android:id="@+id/fragment_layout_list_item_communityAnswer_imagevie"
                android:src="@drawable/outline_school_white_18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_layout_list_item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Titre"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"/>
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/fragment_layout_list_item_scholarClass_textview"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Classe"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/fragment_layout_list_item_subject_textview"
        android:text="sujet"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/fragment_layout_list_item_reference_textview"
        android:text="reference"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/fragment_layout_list_item_date_textview"
        android:text="date"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"/>
</LinearLayout>
</LinearLayout>