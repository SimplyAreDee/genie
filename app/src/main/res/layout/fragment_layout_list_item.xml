<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_layout_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:text="Titre"
                android:layout_width="wrap_content"
                android:id="@+id/fragment_layout_list_item_entry_title" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="Page"
                android:layout_width="wrap_content"
                android:id="@+id/fragment_layout_list_item_entry_page" />

            <TextView
                android:text="Numero"
                android:layout_width="wrap_content"
                android:id="@+id/fragment_layout_list_item_entry_number" />
        </TableRow>

        <TableRow>

            <TextView
                android:text="Consigne"
                android:layout_width="wrap_content"
                android:id="@+id/fragment_layout_list_item_entry_subject" />
        </TableRow>
    </TableLayout>
</RelativeLayout>