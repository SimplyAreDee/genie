<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/browser_actions_title_color"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:id="@+id/fragment_layout_answer_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:minHeight="100dp">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragment_layout_answer_item_questionVote_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minWidth="50sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fragment_layout_answer_item_certifiedAnswer_imageview"
                    android:src="@drawable/outline_expand_less_white_18dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <ImageView
                    android:id="@+id/fragment_layout_answer_item_communityAnswer_imagevie"
                    android:src="@drawable/outline_expand_more_white_18dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_layout_answer_item_answer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Reponse"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fragment_layout_answer_item_author_textview"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="auteur"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>
        <TextView
            android:id="@+id/fragment_layout_answer_item_date_textview"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="date"
            android:textSize="18sp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>